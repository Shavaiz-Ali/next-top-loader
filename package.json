{
  "name": "@shavaizali/next-top-loader",
  "version": "1.0.1",
  "description": "A lightweight, customizable top loading progress bar for Next.js App Router",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-styles",
    "copy-styles": "powershell -Command \"Copy-Item src/styles.css dist/styles.css\"",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch"
  },
  "keywords": [
    "next",
    "nextjs",
    "next.js",
    "toploader",
    "progress",
    "loading",
    "router",
    "app-router",
    "navigation",
    "react",
    "typescript"
  ],
  "author": "shavaizali",
  "license": "MIT",
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shavaiz-Ali/next-top-loader"
  }
}
